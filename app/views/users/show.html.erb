<div class="main-container top">
  <div class="row">
    <div class="col-12 col-lg-4">
    <div class="sidebar-left">
      <div class="sidebar">
        <div class="profile-photo">
          <%= cl_image_tag @user.photo, width: 300, height: 300, crop: :fill, class: "photo" %>
        </div>

        <h2> <%= @user.username %></h2>

        <ul>
          <li><%= @user.gender %> â€¢ <%= @user.age %></li>
          <li><%= @user.location %></li>
        </ul>

    <!--     <% if policy(@user).edit? %>
          <%= link_to "Edit your page", edit_user_registration_path  %>
        <% end %> -->

        <div class="btn-book">
          <%= link_to "Book #{@user.username}", new_user_transaction_path(@user.id), class: "btn btn-primary button" %>
        </div>
      </div>

      <div class="sidebar mt-3 ">
        <h2>Bio</h2>
        <p> <%= @user.description %></p>
        </ul>
      </div>
    </div>
    </div>




    <div class="col-12 col-lg-8 ">

    <div class="info-part text-center " >
      <h1><i class="fas fa-comments-dollar"></i> Trademarks and Prices</h1>
        <div class="trademarks">
          <% @user.trademarks.each do |trademark| %>
            <div class="trademark-category">
              <div class="trademark-category-info">
                <p> RMB <%= trademark.price_per_hour %> </p>
                <br>
                <p> <%= trademark.skill %> </p>
              </div>
              <% if current_user.present? %>
                <% if trademark.user_id == current_user.id %>
                  <div class="trademark-category-icons">
                    <%= link_to edit_user_trademark_path(current_user.id,trademark.id) do  %>
                      <i class="fas fa-pen mr-3"></i>
                    <% end %>
                    <%= link_to user_trademark_path(current_user.id,trademark.id), method: 'DELETE' do  %>
                      <i class="fas fa-trash-alt"></i>
                    <% end %>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
    </div>
      </ul>
    </div>
    </div>

  </div>
</div>





<div class="transactions">
  <% @markers.each_with_index do |marker, index| %>
    <div class="transaction-container mt-5 bg-light">
      <div class="row">
        <div class="col-sm-4 d-flex align-itmes-center">
          <div class="map p-4" style="width: 100%; height: 200px;" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
          </div>
        <div class="col-sm-8 p-4">
          <% if marker[:optional_title].present? %>
            <div class="d-flex justify-content-between">
              <h3><%= marker[:optional_title] %></h3>
              <div class="mr-3">
                <%# if current_user.id == Trademark.find(marker[:trademark_id].user_id %>
                  <%= link_to edit_user_transaction_path(Trademark.find(marker[:trademark_id]).user_id,marker[:id]) do  %>
                    <i class="fas fa-pen mr-3"></i>
                  <% end %>
                  <%= link_to user_transaction_path(Trademark.find(marker[:trademark_id]).user_id,marker[:id]), method: 'DELETE' do  %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                <%# end %>
              </div>
            </div>
            <br>
            <p class="my-0"><%= marker[:description] %></p>
            <br>
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <p class="my-0"><%= marker[:location] %></p>
                <p class="my-0"><%= marker[:date].strftime("%A, %d %b %Y %l:%M %p") %></p>
              </div>
              <h3 class="pr-5"><strong><%= marker[:price_per_hour] %> $/h</strong> </h3>
            </div>
          <% else %>
              <div class="d-flex justify-content-between">
                 <h3><%= Trademark.find(marker[:trademark_id]).skill %></h3>

              </div>
              <br>
              <p class="my-0"><%= marker[:description] %></p>
              <br>
              <div class="d-flex justify-content-between align-items-center">
                <div>
                  <p class="my-0"><%= marker[:location] %></p>
                  <p class="my-0"><%= marker[:date].strftime("%A, %d %b %Y %l:%M %p") %></p>
                </div>
                <h3 class="pr-5"><strong><%= Trademark.find(marker[:trademark_id]).price_per_hour %> $/h</strong> </h3>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
  let markers = <%= @markers.to_json.to_s.html_safe %>
</script>
