<div class="container">
  <%= simple_form_for :search, url: users_path, method: :get do |f| %>
    <div class="search-form-control form-group mt-5">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search with Actor's name or by skills"/>
      <button name="button" type="Search" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
  <!-- below is the previous code -->
  <div class="card-box mt-0 pt-0">
    <% if current_user.nil? %>
      <% @users.each do |user| %>
        <%= render 'userlist', :user => user %>
      <% end %>
    <% else %>
      <% @users.each do |user| %>
        <% unless current_user.id == user.id %>
          <%= render 'userlist', :user => user %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
