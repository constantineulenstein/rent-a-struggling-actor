<div class="container">
  <h2 class="my-3">Edit your profile</h2>

  <%= simple_form_for(@user) do |f| %>
    <%= f.error_notification %>
        <div class="form-inputs bg-light p-3">
          <%= f.input :username, input_html: {value: @user.username} %>
          <%= f.input :first_name, input_html: {value: @user.first_name}%>
          <%= f.input :last_name, input_html: {value: @user.last_name} %>
          <%= f.input :gender, input_html: {value: @user.gender} %>
          <%= f.input :age, input_html: {value: @user.age} %>
          <%= f.input :location, label: "Where do you live?", input_html: {value: @user.location} %>
          <%= f.input :description, label: "Tell us something about yourself!", input_html: {value: @user.description} %>
          <%= f.input :photo, label: "Please upload a photo of you", input_html: {value: @user.photo} %>
          <%= f.input :photo_cache, as: :hidden %>
        </div>
    <div class="form-actions my-3">
      <%= f.button :submit, "Edit your profile", class: "btn btn-outline-dark" %>
    </div>
  <% end %>




</div>
